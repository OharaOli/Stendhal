<?xml version="1.0" encoding="UTF-8"?>
<achievements xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="stendhal ../achievements.xsd ">

  <achievement name="outside zone achievement">
    <type class="achievement"/>
    <category value = "OUTSIDE_ZONE"/>
    <implementation class-name="games.stendhal.server.core.rp.achievement.factory.OutsideZoneAchievementFactory"/>
    <identifier value="zone.outside.semos"/>
    <title value="Junior Explorer"/>
    <description value="Visit all outside zones in the Semos region"/>
    <score value="Achievement.EASY_BASE_SCORE"/>
    <active value="true"/>
    <conditions>
      <condition>
        <method value="PlayerVisitedZonesInRegionCondition"/>
        <parameter value="semos"/>
        <parameter value="Boolean.TRUE"/>
        <parameter value="Boolean.TRUE"/>
      </condition>
    </conditions>
  </achievement>

</achievements>