<?xml version="1.0" encoding="UTF-8"?>
<achievements xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="stendhal ../achievements.xsd ">

  <achievement name="production achievement">
    <type class="achievement"/>
    <category value = "PRODUCTION"/>
    <implementation class-name="games.stendhal.server.core.rp.achievement.factory.ProductionAchievementFactory"/>
    <identifier value="production.class.food"/>
    <title value="Gourmet"/>
    <description value="Order all food types available from Faiumoni's cooks"/>
    <score value="Achievement.MEDIUM_BASE_SCORE"/>
    <active value="true"/>
    <conditions>
      <condition>
        <method value="PlayerProducedNumberOfItemsCondition"/>
        <parameter value="1"/>
        <parameter value="foods"/>
      </condition>
      <condition>
        <method value="QuestStateStartsWithCondition"/>
        <parameter value="coal_for_haunchy"/>
        <parameter value="waiting;"/>
      </condition>
    </conditions>
  </achievement>

</achievements>