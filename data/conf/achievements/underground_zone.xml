<?xml version="1.0" encoding="UTF-8"?>
<achievements xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="stendhal ../achievements.xsd ">

  <achievement name="underground zone achievement">
    <type class="achievement"/>
    <implementation class-name="games.stendhal.server.core.rp.achievement.factory.UndergroundZoneAchievementFactory"/>
    <identifier value="zone.underground.semos"/>
    <title value="Canary"/>
    <description value="Visit all underground zones in the Semos region"/>
    <score value="Achievement.MEDIUM_BASE_SCORE"/>
    <active value="true"/>
    <conditions>
      <condition>
        <method value="PlayerVisitedZonesInRegionCondition"/>
        <parameter value='"semos"'/>
        <parameter value="Boolean.TRUE"/>
        <parameter value="Boolean.FALSE"/>
      </condition>
    </conditions>
  </achievement>

</achievements>